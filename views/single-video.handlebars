<div class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1>
        {{video.title}}
      </h1>
      <a class="edit-video-link" id="edit" href="/videos/{{video._id}}/edit">
        Edit
      </a>
      <form action="/videos/{{video._id}}/deletions" method="POST">
        <input class="input-button" id="delete" value="Delete" type="submit" />
      </form>
    </div>
    <iframe class="video-player" frameborder="0" src="{{video.url}}"></iframe>
    <div class="video-description">
      {{video.description}}
    </div>
    <hr />
    <h2>
      Comments
    </h2>
    <form action="/videos/{{video._id}}/comments" method="POST">
      <textarea name="value" id="comment-input"></textarea>
      <input type="submit" id="comment" value="Comment" />
    </form>
    <ul id="comments">
      {{#each video.comments}}
        <li>
          {{this}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>
